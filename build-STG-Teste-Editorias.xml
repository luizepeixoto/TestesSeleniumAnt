<?xml version="1.0" ?>
<project name="Editorias" basedir="." default="test">
	<property name="testdir" location="test" />
	<taskdef resource="net/sf/antcontrib/antcontrib.properties" />

	<property name="report.dir" location="test" />
	<property name="testdir" location="test" />
	<property name="srcdir" location="src" />
	<property name="engine_lib_path" value="lib" />
	<property name="full-compile" value="false" />
	<path id="classpath.base" />
	<path id="classpath.test">
		<fileset dir="${engine_lib_path}" includes="**/*.jar" />
		<pathelement location="${testdir}" />
		<pathelement location="${srcdir}" />
		<path refid="classpath.base" />
	</path>

	<target name="clean">
		<delete verbose="${full-compile}">
			<fileset dir="${testdir}" includes="**/*.class" />
		</delete>
	</target>

	<target name="compile" depends="clean">
		<javac srcdir="${srcdir}" destdir="${testdir}" verbose="${full-compile}">
			<compilerarg line="-encoding utf-8" />
			<classpath refid="classpath.test" />
		</javac>
	</target>

	<target name="test" depends="compile">
		<parallel threadCount="3">
			<junit printsummary="yes" haltonfailure="no">
				<classpath refid="classpath.test" />
				<sysproperty key="propertyFile" value="src/resources/Configuracoes-STG.properties" />
				<!-- formatter type="brief" usefile="false" / -->
				<formatter type="xml" />
				<batchtest fork="yes" todir="${srcdir}">
					<fileset dir="${srcdir}">
						
						<!-- br.com.infoglobo.testes.editorias -->
						<include name="**/BarraDeBuscaRioGastronomiaTest.java" />
						<include name="**/BoxDeCriticasComPaginacaoTest.java" />
						<include name="**/BoxDeCriticasTest.java" />
						<include name="**/BoxUltimasNoticiasDeUmaEditoriaTest.java" />
						<include name="**/BoxUltimasNoticiasDeUmaSubEditoriaTest.java" />
						<include name="**/BoxUltimasNoticiasDeUmTopicoTest.java" />
						<include name="**/DestaquesDoMenuComColunaEsquerdaVaziaSubEditoriaTest.java" />
						<include name="**/DestaquesDoMenuComColunaEsquerdaVaziaTest.java" />
						<include name="**/EditoriaAutomaticaTituloTest.java" />
						<include name="**/EditoriaComDoisIncludesDeDestaqueDuasColunasUrgenteTest.java" />
						<include name="**/MenuCapaEditoriaTest.java" />
						
						<!--br.com.infoglobo.testes.editorias.euReporter-->
						<include name="**/EuReporterMenuTest.java" />
						<!--<include name="**/EuReporterNavegacaoTest.java" />-->
						<include name="**/EuReporterWidgetTest.java" />
					
					</fileset>
				</batchtest>
			</junit>
		</parallel>
	</target>

	<!--<junitreport todir="${report.dir}">
		<fileset dir="${report.dir}">
			<include name="TEST-*.xml" />
		</fileset>
		<report format="frames" todir="${report.dir}" />
	</junitreport>-->
</project>